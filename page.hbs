{{!< default}}

{{! Page Template }}
{{#post}}
<article class="page-template">
    
    {{! Page Header }}
    <header class="page-header{{#match @custom.post_header_style "Wide"}} page-header-wide{{/match}}{{#match @custom.post_header_style "Background Media"}} page-header-background{{/match}}">
        
        {{! Background Image for certain styles }}
        {{#match @custom.post_header_style "Background Media"}}
        {{#if feature_image}}
        <div class="page-header-background-image" style="background-image: url({{img_url feature_image size="xl"}})">
            <div class="page-header-overlay"></div>
        </div>
        {{/if}}
        {{/match}}
        
        <div class="page-header-content{{#match @custom.post_header_style ".*Centered"}} centered{{/match}}">
            <div class="container{{#match @custom.post_header_style "Narrow.*"}} container-narrow{{/match}}">
                
                {{! Page Title - Check if it should be shown }}
                {{#if @page.show_title_and_feature_image}}
                <h1 class="page-title">{{title}}</h1>
                {{/if}}
                
                {{! Page Meta }}
                <div class="page-meta">
                    <time class="page-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                    {{#if reading_time}}
                    <span class="page-reading-time">{{reading_time}}</span>
                    {{/if}}
                </div>
                
            </div>
        </div>
    </header>
    
    {{! Featured Image - Non-background styles }}
    {{#match @custom.post_header_style "Background Media" reverse="true"}}
    {{#if feature_image}}
    {{#if @page.show_title_and_feature_image}}
    <figure class="page-image{{#match @custom.post_header_style "Wide.*"}} page-image-wide{{/match}}">
        <img src="{{img_url feature_image size="xl"}}" alt="{{title}}">
        {{#if feature_image_caption}}
        <figcaption>{{feature_image_caption}}</figcaption>
        {{/if}}
    </figure>
    {{/if}}
    {{/if}}
    {{/match}}
    
    {{! Page Content }}
    <div class="page-content">
        <div class="container{{#match @custom.post_header_style "Narrow.*"}} container-narrow{{/match}}">
            <div class="content">
                {{content}}
            </div>
        </div>
    </div>
    
</article>
{{/post}}